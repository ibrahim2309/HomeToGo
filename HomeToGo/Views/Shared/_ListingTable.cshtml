@model IEnumerable<Listing>

<div class="table-responsive">
    <table class='table table-striped table-hover align-middle'>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Address</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var listing in Model)
            {
                <tr>
                    <td>@listing.ListingId</td>
                    <td> <a class="link-primary"  asp-controller="Listing" 
                            asp-action="Details"
                            asp-route-id="@listing.ListingId">@listing.Title</a></td>
                    <td>@listing.Address</td>
                    <td>@listing.Price.ToString(("0.00 Nok"))</td>
                    <td>@listing.Description</td>
                    <td>
                        <img src="@listing.ImageUrl" alt="Listing Image" style="max-width: 80px; max-height: 80px;"/>
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-controller="Listing" asp-action="Update" asp-route-id="@listing.ListingId">Update</a>
                        <a class="btn btn-danger" asp-controller="Listing" asp-action="Delete" asp-route-id="@listing.ListingId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p class="mt-3">
    <a class="btn btn-primary"
        asp-controller="Listing"
        asp-action="Create">Create New Item</a>
</p>
