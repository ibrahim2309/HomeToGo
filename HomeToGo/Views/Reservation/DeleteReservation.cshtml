@model Reservation

<h2>Delete Reservation</h2>

<h3>Are you sure you want to delete this reservation?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Reservation Id</dt>
        <dd class="col-sm-10">@Model.ReservationId</dd>

         <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.ReservationDate.ToString("d")</dd>
        
        <dt class="col-sm-2">User Name</dt>
        <dd class="col-sm-10">@Model.User?.Name</dd>

        <dt class="col-sm-2">Listing</dt>
        <dd class="col-sm-10">@Model.Listing?.Title</dd>

        <dt class="col-sm-2">Check in Date</dt>
        <dd class="col-sm-10">@Model.CheckInDate.ToString("d")</dd>

        <dt class="col-sm-2">Check Out Date</dt>
        <dd class="col-sm-10">@Model.CheckOutDate.ToString("d")</dd>
        
        <dt class="col-sm-2">TotalPrice</dt>
        <dd class="col-sm-10">@Model.TotalPrice.ToString("0.00 NOK ")</dd>
    </dl>

    
   <form asp-controller="Reservation" asp-action="DeleteConfirmed" asp-route-id="@Model.ReservationId" method="post">
       <button type="submit" class="btn btn-danger">Delete</button>
       <a asp-controller="Reservation" asp-action="Table" class="btn btn-secondary">Cancel</a>
   </form>
    
</div>