@model Listing;

<div class="container mt-4">
    <div class="row gx-5">
        <div class="col-md-6">
            <img alt="@Model.Title" src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" />
        </div>
        <div class="col-md-6">
            <h1>@Model.Title</h1>
            <p class="text-muted fs-4">@Model.Price.ToString("0.00 NOK")</p>
            <p>@Model.Description</p>
            <div class="mt-4">
                <a asp-area="" asp-controller="Reservation" asp-action="CreateReservation" class="btn btn-primary">Create a Reservation</a>
            </div>
            <div class="mt-3">
                <a href="/Listing/Table" class="btn btn-outline-secondary">Back to Table View</a>
                <a href="/Listing/Grid" class="btn btn-outline-secondary ms-2">Back to Grid View</a>
            </div>
        </div>
    </div>
</div>
